{% extends "default.njk" %}

{% block content %}
    <div class="posts">
{% for post in collections.posts | reverse | limit(3) %}
      <article class="post" data-input-path="{{ post.filePathStem }}">
        <h2 class="post-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <time class="post-date" datetime="{{ post.date | dateISO }}">{{ post.date | dateFormat('LL') }}</time>
{{ post.data.description | md | safe }}
      </article>
{% endfor %}
    </div>
{% endblock %}
